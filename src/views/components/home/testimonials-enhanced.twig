<div class="container mx-auto mb-5 relative flex flex-col items-center justify-center" style="width: 100%; max-width: 800px; height: 40vh; background-image: url('{{ component.testi_slides_bg }}'); background-position: center; background-size: cover; background-repeat: no-repeat;">
    <h1 class="text-center font-slim md:text-4xl lg:text-5xl mb-4">
        {{ component.testi_slides_title }}
    </h1>
    <div class="relative bg-[#f0f0f0] flex justify-center items-center" style="width: 50%; height: 100%;">
        <salla-slider id="main-slider-{{ position }}" class="w-full h-full" auto-play show-controls="false" pagination>
            <div slot="items" class="h-full w-full">
                {% for slide in component.testi_slides_collection %}
                    <div class="swiper-slide flex items-center justify-center h-full">
                        <img src="{{ slide.testi_slides_img }}" alt="Testimonial Image" class="max-w-full max-h-full object-contain">
                    </div>
                {% endfor %}
            </div>
        </salla-slider>
    </div>
</div>
