<h1 class="text-center font-slim md:text-4xl lg:text-5xl">{{ component.testi_slides_title }}</h1>
<section class="bg-[#f0f0f0] relative">
	<salla-slider id="main-slider-{{ position }}" class="mx-auto lg:w-1/3 sm:w-3/4 " auto-play show-controls="false" pagination>
		<div slot="items">
			{% for slide in component.testi_slides_collection %}
				<div class="swiper-slide w-full min-h-[30vh] lg:min-h-[35vh]">
					<img src="{{ slide.testi_slides_img }}" alt="Testimonial Image" class="w-full h-auto object-contain">
				</div>
			{% endfor %}
		</div>
	</salla-slider>
	<img src="{{ component.testi_slides_bg }}" alt="Bottom Right Image" class="hidden lg:absolute lg:bottom-5 lg:right-20 lg:w-[12vw] lg:block" style="width: 12vw;">
	<div></div>
</section>
